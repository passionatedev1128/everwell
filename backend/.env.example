# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration (REQUIRED)
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/everwell
# For Local MongoDB: mongodb://localhost:27017/everwell
MONGO_URI=your_mongodb_connection_string_here

# JWT Configuration (REQUIRED)
JWT_SECRET=your_super_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Email Configuration (Optional - for email features)
# Email Provider: gmail, outlook, hotmail, yahoo, custom
EMAIL_PROVIDER=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-password
EMAIL_APP_PASSWORD=your-app-password  # Required for Gmail

# Custom SMTP (if EMAIL_PROVIDER=custom)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false

# Cloudinary Configuration (Optional - for cloud file storage)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret
